<%- include('../partials/header.ejs') %> 
<p class="heading">Edit <%= recipe.title %></p>

<section class="recipe-form">
  <form action="/myaccount/<%= recipe._id %>?_method=PUT"  method="POST">
        <label>Title: <input class="recipe-input" type="text" name="title" value="<%= recipe.title %>" autocomplete="off"><br></label>
        <label>Ingredient(<small>Please Enter Qty/Unit of Measurement ie.</small>): <br>
        <input class="recipe-input" type="text" name="name" placeholder="ie. steak - 8oz" autocomplete="off">
            <button id="add-ingredient"type="submit" formaction="/recipes/ingredient/<%= recipe._id %>?_method=PUT" method="POST">Add</button><br>
        </label>
        <% if(recipe.ingredients.length) { %>
            <% for(let idx = 0 ; idx < recipe.ingredients.length; idx++) { %>
                <button class="pill" type="submit" formaction="/recipes/ingredient/<%= recipe._id %>/<%= idx %>?_method=PUT" method="POST">x <%= recipe.ingredients[idx] %></button>
                <input type="hidden" value="<%= recipe.ingredients[idx] %>" name ="ingredients">
            <% }; %>
        <% } %>
        <br><label>Instructions: <br>
         <textarea id="instructions-text" name="instructions" ><%= recipe.instructions %></textarea><br></label>
        <label>Image URL: <input class="recipe-input" type="text" name="imgUrl" value="<%= recipe.imgUrl %>" autocomplete="off"><br></label>
        <label>Reference Link: <input class="recipe-input" type="text" name="refLink" value="<%= recipe.refLink %>" autocomplete="off"> </label>
        <input type="checkbox" name="share" <%= recipe.share ? 'checked' : ''%>> Share with everyone <br>
        <input id="add-recipe-btn" type="submit" value="Update Recipe">    
  </form> 
</section>

<%- include('../partials/footer.ejs') %> 