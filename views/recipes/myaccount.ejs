<%- include('../partials/header.ejs') %> 

<p class="heading"> My SHARECIPES</p>

<a href="new"><button>Add a New Recipe</button></a><br><br>

    <% recipes.forEach(function(recipe) { %>
        <div class= "recipe">
            <p>Status: <span id="status-message"><%= recipe.share ? 'Shared' : 'Private' %></span></p>
            <p class="recipe-header"><strong><%= recipe.title %></strong></p>
            <img class="image" src="<%= recipe.imgUrl %>" alt="<%= recipe.title %>">
            <p><strong>Ingredients:</strong></p>
                <ul>
                <% recipe.ingredients.forEach(function(ingredient) { %>
                   <li> <%= ingredient %> </li>
                <% }) %>
                </ul>
            <p ><strong>Instructions: </strong></p>
                <p id="instructions"><%= recipe.instructions %></p>

            <a href="/recipes/<%= recipe._id %>/edit"><button>Edit Recipe</button></a>
            <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" style="display:inline;">
                <input type="submit" value="Delete">
            </form>
        </div><br><br>

    <% }) %>


<%- include('../partials/footer.ejs') %> 